{% extends "tfktelemarkBundle::pagelayout.html.twig" %}


{% block content %}
<div class="container">
            <div class="folder-title">
                {{ ez_render_field(content, 'name') }}
            </div>
            <div class="folder-intro">
                {{ ez_render_field(content, 'short_description') }}
            </div>


  {% if items|length() > 0 %}
        {% for item in items %}
            {{
                render_esi(
                    controller(
                        "ez_content:viewLocation",
                                {
                                    "locationId": item.contentInfo.mainLocationId,
                                    "viewType": "line"
                                }
                    )
                )
            }}
        {% endfor %}

        {% if items.haveToPaginate() %}
            <div class="pagination-centered">
                {{ pagerfanta( items, 'twitter_bootstrap_translated', {'routeName': location} ) }}
            </div>
        {% endif %}
    {% endif %}
</div>
    </section>
{% endblock %}
